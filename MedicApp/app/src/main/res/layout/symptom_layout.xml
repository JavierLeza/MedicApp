<?xml version="1.0" encoding="utf-8"?>
    <!--
        Este linear layout contiene un item individual en la lista de sintomas que se muestran en PatientSymptomsActivity
    -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="vertical"
tools:context="com.medic.medicapp.PatientSymptomsActivity">


<!-- TextView muestra el nombre del sintoma -->
<TextView
    android:id="@+id/tv_symptom"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textColor="@android:color/primary_text_light"
    style="@style/TextAppearance.AppCompat.Medium"
    android:onClick="symptomDetail"
    android:padding="16dp" />


<!-- Linea divisoria -->
<View
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="@android:color/darker_gray"/>

</LinearLayout>
